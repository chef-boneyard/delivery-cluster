{
  "version": "2",
  "build_cookbook": {
    "name": "build",
    "path": ".delivery/build"
  },
  "delivery-truck": {
    "publish": {
      "github": "chef-cookbooks/delivery-cluster"
    },
    "lint": {
      "enable_cookstyle": true
    }
  },
  "skip_phases": [
    "security",
    "quality",
    "publish"
  ],
  "build_nodes": {
    "provision": ["platform_version:14.04"],
    "deploy": ["platform_version:14.04"],
    "functional": ["platform_version:14.04"]
  }
}
